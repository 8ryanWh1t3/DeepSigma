{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sigma-overwatch.dev/schemas/decision_episode_chain.schema.json",
  "title": "Decision Episode Chain",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intent_hash",
    "authority_hash",
    "snapshot_hash",
    "outputs_hash",
    "chain_hash"
  ],
  "properties": {
    "intent_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "authority_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "snapshot_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "outputs_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "chain_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  }
}
